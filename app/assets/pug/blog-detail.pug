									ul.categries
										li
											a(href="blog-detail.html") Bánh trung thu
										li
											a(href="blog-detail.html") Hoạt động
										li
											a(href="blog-detail.html") Đánh giá
										li
											a(href="blog-detail.html") Khuyến mãi
										li
											a(href="blog-detail.html") Quy trình làm bánh
								.sidebar-section
									.sidebar-section_header
										h5.sidebar-section--title Tin tức nổi bật
									.feature-news_group
