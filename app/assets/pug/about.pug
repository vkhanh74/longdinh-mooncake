				.our-success_group
					.our-success_card
						.our-success_card_wrapper
							.our-success_card__img
								img(src="assets/images/reward-1.png", alt="Logo các danh hiệu")
							.our-success_card__content
								h5.reward-name Thương hiệu bánh của năm
								p.reward-time 2011-2012
								p.reward-detail Danh hiệu thượng hiệu bánh xuất sắc năm 2011 - 2012  do Bộ Văn hóa trao tặng  
					.our-success_card
